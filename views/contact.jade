extends layout

block content
  // Main jumbotron for a primary marketing message or call to action
  .container
    // Example row of columns
    .row
      .col-md-12
        form(method='post', action='/contact/send')
            h1 Contact Us
            .form-group
              label(for='name') Name
              input#name.form-control(type='text', placeholder='Enter Name', name='name')
            .form-group
              label(for='email') Password
              input#email.form-control(type='email', placeholder='Enter Email', name='email')
            .form-group
              label(for='email') Password
              textarea#email.form-control(placeholder='Enter message', name='message')
            button.btn.btn-default(type='submit') Submit
